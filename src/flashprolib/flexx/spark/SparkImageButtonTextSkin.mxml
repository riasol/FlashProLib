<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		
		
		>
	<fx:Metadata>
		[HostComponent("flashprolib.flexx.spark.SparkImageButton")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			override public function setActualSize(w:Number, h:Number):void{
				super.setActualSize(w, h)
				scrollRect=new Rectangle(0,0,width,height)
				r.graphics.beginFill(0xffffff)
				r.graphics.drawRect(0,0,width,height)
			}
		]]>
	</fx:Script>
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up"/>
	</s:states>
	<!--<s:transitions>
	<s:Transition fromState="*" toState="*" >
	<s:Fade target="{imageDisplay}" duration="2000"/>
	</s:Transition>
	</s:transitions>-->
	<s:BitmapImage id="imageDisplay" mask="{r}" y.over="{-height}" y.down="{imageDisplay.height==3*height?-2*height:-height}"/>
	<s:SpriteVisualElement  id="r" left="0" top="0" right="0" bottom="0" opaqueBackground="0xffffff">
	</s:SpriteVisualElement>
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 maxDisplayedLines="1"
			 horizontalCenter="0" verticalCenter="1"
			 left="10" right="10" top="2" bottom="2">
	</s:Label>
</s:Skin>
